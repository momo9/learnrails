<p>
<%= link_to 'new', new_article_path %>
</p>

<table>
    <tr>
        <th>Title</th>
        <th></th>
        <th></th>
    </tr>
    <% @articles.each do |item| %>
        <tr>
            <td>
                <%= link_to item.title, article_path(item) %>
            </td>
            <td>
                <%= link_to 'delete', article_path(item), method: :delete, data: {confirm: 'Are you sure?'} %>
            </td>
            <td>
                <%= link_to 'edit', edit_article_path(item) %>
            </td>
        </tr>
    <% end %>
</table>
